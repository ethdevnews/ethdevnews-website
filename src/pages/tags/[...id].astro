---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import CalendarArrowCard from "@components/IssueArrowCard.astro";
import BackToPrevious from "@components/BackToPrevious.astro";

export async function getStaticPaths() {
  const calendar = await getCollection("calendar", ({ data }) => !data.draft);

  // Get unique tags
  const tags = [...new Set(calendar.flatMap((calendarItem) => calendarItem.data.tags || []))];

  // Create paths for each tag
  return tags.map((tag) => ({
    params: { id: tag },
    props: {
      calendar: calendar.filter((calendarItem) => calendarItem.data.tags?.includes(tag)),
    },
  }));
}

const { id } = Astro.params;
const { calendar } = Astro.props;

// Sort calendar by date, most recent first
const sortedCalendar = calendar.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout title={`Tag: ${id}`} description={`Calendar items with the tag: ${id}`}>
  <Container>
    <div class="space-y-10" data-pagefind-ignore>
      <BackToPrevious href="/tags"> All tags </BackToPrevious>
      <h1 class="animate font-semibold text-black dark:text-white">
        Issues tagged with "{id}"
      </h1>
      <ul class="animate flex flex-col gap-4">
        {sortedCalendar.map((calendarItem) => <CalendarArrowCard entry={calendarItem} />)}
      </ul>
    </div>
  </Container>
</Layout>
